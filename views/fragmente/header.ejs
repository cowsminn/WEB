<header>
    <!-- Secțiunea de oferte -->
    <div id="oferte-container" class="alert alert-info m-2" style="display: none;">
        <div class="d-flex justify-content-between align-items-center">
            <div class="oferta-content">
                <strong id="oferta-text">Se încarcă oferta...</strong>
            </div>
            <div class="timer-container text-end">
                <div id="timer" class="fw-bold text-danger"></div>
            </div>
        </div>
    </div>
    
    <!-- Switch pentru tema în header - standardized -->
    <div class="header-theme-switch">
        <div class="form-check form-switch">
            <input class="form-check-input theme-toggle" type="checkbox" role="switch" id="headerThemeSwitch">
            <label class="form-check-label" for="headerThemeSwitch">
                <i class="fas fa-sun"></i>
                <i class="fas fa-moon"></i>
            </label>
        </div>
    </div>
    
    <h1>ElectroDelicii</h1>
    <div id="variante-meniu">
        <!-- Meniu principal pentru desktop -->
        <nav>
            <ul>
                <li><a href="/">Acasă</a>
                    <ul>
                        <li><a href="/#welcome">Welcome</a></li>
                        <li><a href="/#intrebari">Întrebări</a></li>
                        <li><a href="/#videouri">Videouri</a></li>
                    </ul>
                </li>
                <li><a href="/galerii">Galerii</a>
                    <ul>
                        <li><a href="/galerie-statica">Galerie Statică</a></li>
                        <li><a href="/galerie-dinamica">Galerie Dinamică</a></li>
                    </ul>
                </li>
                <li><a href="/produse">Produse</a>
                    <ul>
                        <li><a href="/produse">Toate</a></li>
                        <% if (typeof categorii !== 'undefined' && categorii) { %>
                            <% categorii.forEach(function(categorie) { %>
                                <li><a href="/produse?categorie=<%= categorie %>"><%= categorie.charAt(0).toUpperCase() + categorie.slice(1) %></a></li>
                            <% }); %>
                        <% } %>
                    </ul>
                </li>
                <li><a href="/targuri">Târguri</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </nav>
        
        <!-- Buton Meniu pentru mobil (hamburger) -->
        <button class="menu-toggle">
            <i class="fas fa-bars"></i>
        </button>
        
        <!-- Meniu secundar pentru versiunea mobilă -->
        <div class="menu-secundar">
            <a href="/">Acasă</a>
            <a href="/#welcome" class="submenu-item">Welcome</a>
            <a href="/#intrebari" class="submenu-item">Întrebări</a>
            <a href="/#videouri" class="submenu-item">Videouri</a>
            <a href="/galerii" class="has-submenu">Galerii</a>
            <a href="/galerie-statica" class="submenu-item">Galerie Statică</a>
            <a href="/galerie-dinamica" class="submenu-item">Galerie Dinamică</a>
            <a href="/produse" class="has-submenu">Produse</a>
            <a href="/produse" class="submenu-item">Toate</a>
            <% if (typeof categorii !== 'undefined' && categorii) { %>
                <% categorii.forEach(function(categorie) { %>
                    <a href="/produse?categorie=<%= categorie %>" class="submenu-item"><%= categorie.charAt(0).toUpperCase() + categorie.slice(1) %></a>
                <% }); %>
            <% } %>
            <a href="/targuri">Târguri</a>
            <a href="/contact">Contact</a>
        </div>
    </div>
</header>
