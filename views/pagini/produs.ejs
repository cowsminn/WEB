<!DOCTYPE html>
<html lang="ro">
<head>
    <%- include('../fragmente/head', { titlu: produs.nume + ' - ElectroDelicii' }) %>
    <meta name="description" content="<%= produs.descriere %>">
    <meta name="keywords" content="<%= produs.nume %>, <%= produs.categorie_mare %>, vintage, antichități">
    <link rel="stylesheet" href="/src/css/produs-detalii.css" type="text/css"/>
</head>
<body>
    <%- include('../fragmente/header') %>
    
    <main>
        <section id="produs-detalii">
            <!-- Breadcrumb navigation -->
            <nav class="breadcrumb">
                <a href="/">Acasă</a> &gt; 
                <a href="/produse">Produse</a> &gt; 
                <a href="/produse?categorie=<%= produs.categorie_mare %>"><%= produs.categorie_mare.charAt(0).toUpperCase() + produs.categorie_mare.slice(1) %></a> &gt; 
                <span><%= produs.nume %></span>
            </nav>

            <div class="produs-container">
                <!-- Imaginea principală -->
                <div class="imagine-principala">
                    <img src="/src/img/produse/<%= produs.imagine %>" 
                         alt="<%= produs.nume %>" 
                         title="<%= produs.nume %>">
                </div>

                <!-- Informațiile produsului -->
                <div class="informatii-produs">
                    <h1><%= produs.nume %></h1>
                    
                    <div class="pret-principal">
                        <span class="pret"><%= produs.pret %> RON</span>
                        <% if (produs.garantie) { %>
                            <span class="garantie-badge">Cu garanție</span>
                        <% } %>
                    </div>

                    <div class="categorie-tag">
                        <span>Categorie: <strong><%= produs.categorie_mare.charAt(0).toUpperCase() + produs.categorie_mare.slice(1) %></strong></span>
                    </div>

                    <!-- Descrierea detaliată -->
                    <div class="descriere-detaliata">
                        <h2>Descriere</h2>
                        <p><%= produs.descriere %></p>
                    </div>

                    <!-- Specificații tehnice -->
                    <div class="specificatii">
                        <h3>Specificații tehnice</h3>
                        <table class="tabel-specificatii">
                            <tr>
                                <td class="label">ID Produs:</td>
                                <td class="valoare"><%= produs.id %></td>
                            </tr>
                            <tr>
                                <td class="label">Preț:</td>
                                <td class="valoare"><%= produs.pret %> RON</td>
                            </tr>
                            <tr>
                                <td class="label">Dimensiune:</td>
                                <td class="valoare"><%= produs.dimensiune %> cm</td>
                            </tr>
                            <tr>
                                <td class="label">Raport calitate/preț:</td>
                                <td class="valoare"><%= (produs.dimensiune / produs.pret).toFixed(4) %> cm/RON</td>
                            </tr>
                            <tr>
                                <td class="label">Culoare:</td>
                                <td class="valoare">
                                    <span class="culoare-indicator" style="background-color: <%= getCuloareHex(produs.culoare) %>"></span>
                                    <%= produs.culoare.charAt(0).toUpperCase() + produs.culoare.slice(1) %>
                                </td>
                            </tr>
                            <tr>
                                <td class="label">Tip prezentare:</td>
                                <td class="valoare"><%= produs.tip_prezentare.replace(/_/g, ' ').toUpperCase() %></td>
                            </tr>
                            <tr>
                                <td class="label">Data introducerii:</td>
                                <td class="valoare">
                                    <time datetime="<%= produs.data_introducere %>">
                                        <%= new Date(produs.data_introducere).toLocaleDateString('ro-RO', { 
                                            weekday: 'long', 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric' 
                                        }) %>
                                    </time>
                                </td>
                            </tr>
                            <tr>
                                <td class="label">Garanție:</td>
                                <td class="valoare">
                                    <span class="garantie-status <%= produs.garantie ? 'da' : 'nu' %>">
                                        <%= produs.garantie ? 'Da' : 'Nu' %>
                                    </span>
                                </td>
                            </tr>
                            <% if (produs.caracteristici_speciale) { %>
                            <tr>
                                <td class="label">Caracteristici speciale:</td>
                                <td class="valoare">
                                    <% produs.caracteristici_speciale.split(',').forEach(function(caracteristica) { %>
                                        <span class="caracteristica-tag"><%= caracteristica.trim() %></span>
                                    <% }); %>
                                </td>
                            </tr>
                            <% } %>
                            <tr>
                                <td class="label">Ultima actualizare:</td>
                                <td class="valoare">
                                    <time datetime="<%= produs.updated_at %>">
                                        <%= new Date(produs.updated_at).toLocaleDateString('ro-RO') %>
                                    </time>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!-- Acțiuni -->
                    <div class="actiuni-produs">
                        <button class="btn-contact">Contactează pentru achiziție</button>
                        <button class="btn-wishlist">Adaugă la favorite</button>
                        <a href="/produse?categorie=<%= produs.categorie_mare %>" class="btn-inapoi">
                            Înapoi la <%= produs.categorie_mare %>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Informații suplimentare -->
            <div class="informatii-suplimentare">
                <div class="sectiune-info">
                    <h3>Informații despre expediere</h3>
                    <p>Produsul este disponibil pentru <%= produs.tip_prezentare.replace(/_/g, ' ') %>.</p>
                    <% if (produs.tip_prezentare.includes('curier')) { %>
                        <p>Livrare prin curier în 2-5 zile lucrătoare.</p>
                    <% } else if (produs.tip_prezentare.includes('posta')) { %>
                        <p>Expediere prin poștă în 3-7 zile lucrătoare.</p>
                    <% } else if (produs.tip_prezentare.includes('ridicare')) { %>
                        <p>Produsul poate fi ridicat din magazin în programul normal de lucru.</p>
                    <% } %>
                </div>

                <div class="sectiune-info">
                    <h3>Garanția produsului</h3>
                    <% if (produs.garantie) { %>
                        <p>Acest produs beneficiază de garanție limitată. Contactați-ne pentru detalii.</p>
                    <% } else { %>
                        <p>Produsul se vinde ca atare, fără garanție. Vă recomandăm să îl inspectați înainte de achiziție.</p>
                    <% } %>
                </div>
            </div>
        </section>
    </main>
    
    <%- include('../fragmente/footer') %>
    
    <!-- Script pentru meniul burger -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const menuToggle = document.querySelector('#variante-meniu .menu-toggle');
        const menuSecundar = document.querySelector('#variante-meniu .menu-secundar');
        
        if (menuToggle) {
            menuToggle.addEventListener('click', function() {
                this.classList.toggle('active');
                menuSecundar.classList.toggle('active');
            });
        }
        
        // Funcție pentru controlul sub-meniului pe mobil
        const menuItems = document.querySelectorAll('.menu-secundar a.has-submenu');
        
        menuItems.forEach(function(item) {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Toggle clasa pentru indicator
                this.classList.toggle('submenu-open');
                
                // Găsește următoarele elemente submenu
                let nextElement = this.nextElementSibling;
                const submenuItems = [];
                
                while (nextElement && nextElement.classList.contains('submenu-item')) {
                    submenuItems.push(nextElement);
                    nextElement = nextElement.nextElementSibling;
                }
                
                // Toggle vizibilitatea submenu-ului
                submenuItems.forEach(function(submenuItem, index) {
                    if (submenuItem.classList.contains('show')) {
                        submenuItem.classList.remove('show');
                    } else {
                        // Adaugă delay pentru animație
                        setTimeout(function() {
                            submenuItem.classList.add('show');
                        }, index * 100);
                    }
                });
            });
        });
    });
    </script>
</body>
</html>