<!DOCTYPE html>
<html lang="ro">
<head>
    <%- include('../fragmente/head', { titlu: produs.nume + ' - ElectroDelicii' }) %>
    <meta name="description" content="<%= produs.descriere %>">
    <meta name="keywords" content="<%= produs.nume %>, <%= produs.categorie_mare %>, vintage, antichități">
    <link rel="stylesheet" href="/src/css/produs-detalii.css" type="text/css"/>
    <link rel="stylesheet" href="/src/css/comparare-produse.css" type="text/css"/>
</head>
<body>
    <%- include('../fragmente/header') %>
    
    <main>
        <section id="produs-detalii" class="produs-detalii" 
                 data-product-id="<%= produs.id %>"
                 data-nume="<%= produs.nume %>"
                 data-descriere="<%= produs.descriere %>"
                 data-pret="<%= produs.pret %>"
                 data-categorie="<%= produs.categorie_mare %>"
                 data-culoare="<%= produs.culoare %>"
                 data-dimensiune="<%= produs.dimensiune %>"
                 data-garantie="<%= produs.garantie %>"
                 data-tip="<%= produs.tip_prezentare %>"
                 data-data="<%= produs.data_introducere %>"
                 data-caracteristici="<%= produs.caracteristici_speciale || '' %>"
                 data-imagine="<%= produs.imagine %>">
            <!-- Breadcrumb navigation -->
            <nav class="breadcrumb">
                <a href="/">Acasă</a> &gt; 
                <a href="/produse">Produse</a> &gt; 
                <a href="/produse?categorie=<%= produs.categorie_mare %>"><%= produs.categorie_mare.charAt(0).toUpperCase() + produs.categorie_mare.slice(1) %></a> &gt; 
                <span><%= produs.nume %></span>
            </nav>

            <div class="produs-container">
                <!-- Imaginea principală -->
                <div class="imagine-principala">
                    <img src="/src/img/produse/<%= produs.imagine %>" 
                         alt="<%= produs.nume %>" 
                         title="<%= produs.nume %>">
                </div>

                <!-- Informațiile produsului -->
                <div class="informatii-produs">
                    <h1><%= produs.nume %></h1>
                    
                    <div class="pret-principal">
                        <div class="price-display" data-original-price="<%= produs.pret %>" data-category="<%= produs.categorie_mare %>">
                            <span class="current-price pret"><%= produs.pret %> RON</span>
                            <span class="original-price text-muted text-decoration-line-through" style="display: none;"></span>
                            <span class="discount-badge badge bg-danger ms-2" style="display: none;"></span>
                        </div>
                        <% if (produs.garantie) { %>
                            <span class="garantie-badge">Cu garanție</span>
                        <% } %>
                    </div>

                    <div class="categorie-tag">
                        <span>Categorie: <strong><%= produs.categorie_mare.charAt(0).toUpperCase() + produs.categorie_mare.slice(1) %></strong></span>
                    </div>

                    <!-- Descrierea detaliată -->
                    <div class="descriere-detaliata">
                        <h2>Descriere</h2>
                        <p><%= produs.descriere %></p>
                    </div>

                    <!-- Specificații tehnice -->
                    <div class="specificatii">
                        <h3>Specificații tehnice</h3>
                        <table class="tabel-specificatii">
                            <tr>
                                <td class="label">ID Produs:</td>
                                <td class="valoare"><%= produs.id %></td>
                            </tr>
                            <tr>
                                <td class="label">Preț:</td>
                                <td class="valoare"><%= produs.pret %> RON</td>
                            </tr>
                            <tr>
                                <td class="label">Dimensiune:</td>
                                <td class="valoare"><%= produs.dimensiune %> cm</td>
                            </tr>
                            <tr>
                                <td class="label">Raport calitate/preț:</td>
                                <td class="valoare"><%= (produs.dimensiune / produs.pret).toFixed(4) %> cm/RON</td>
                            </tr>
                            <tr>
                                <td class="label">Culoare:</td>
                                <td class="valoare">
                                    <span class="culoare-indicator" style="background-color: <%= getCuloareHex(produs.culoare) %>"></span>
                                    <%= produs.culoare.charAt(0).toUpperCase() + produs.culoare.slice(1) %>
                                </td>
                            </tr>
                            <tr>
                                <td class="label">Tip prezentare:</td>
                                <td class="valoare"><%= produs.tip_prezentare.replace(/_/g, ' ').toUpperCase() %></td>
                            </tr>
                            <tr>
                                <td class="label">Data introducerii:</td>
                                <td class="valoare">
                                    <time datetime="<%= produs.data_introducere %>">
                                        <%= new Date(produs.data_introducere).toLocaleDateString('ro-RO', { 
                                            weekday: 'long', 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric' 
                                        }) %>
                                    </time>
                                </td>
                            </tr>
                            <tr>
                                <td class="label">Garanție:</td>
                                <td class="valoare">
                                    <span class="garantie-status <%= produs.garantie ? 'da' : 'nu' %>">
                                        <%= produs.garantie ? 'Da' : 'Nu' %>
                                    </span>
                                </td>
                            </tr>
                            <% if (produs.caracteristici_speciale) { %>
                            <tr>
                                <td class="label">Caracteristici speciale:</td>
                                <td class="valoare">
                                    <% produs.caracteristici_speciale.split(',').forEach(function(caracteristica) { %>
                                        <span class="caracteristica-tag"><%= caracteristica.trim() %></span>
                                    <% }); %>
                                </td>
                            </tr>
                            <% } %>
                            <tr>
                                <td class="label">Ultima actualizare:</td>
                                <td class="valoare">
                                    <time datetime="<%= produs.updated_at %>">
                                        <%= new Date(produs.updated_at).toLocaleDateString('ro-RO') %>
                                    </time>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!-- Acțiuni -->
                    <div class="actiuni-produs">
                        <a href="/produse?categorie=<%= produs.categorie_mare %>" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Înapoi la produse
                        </a>
                        
                        <button class="btn btn-compare" 
                                data-product-id="<%= produs.id %>"
                                title="Adaugă la comparare">
                            <i class="fas fa-balance-scale"></i>
                            Compară acest produs
                        </button>
                    </div>
                </div>
            </div>

            <!-- Informații suplimentare -->
            <div class="informatii-suplimentare">
                <div class="sectiune-info">
                    <h3>Informații despre expediere</h3>
                    <p>Produsul este disponibil pentru <%= produs.tip_prezentare.replace(/_/g, ' ') %>.</p>
                    <% if (produs.tip_prezentare.includes('curier')) { %>
                        <p>Livrare prin curier în 2-5 zile lucrătoare.</p>
                    <% } else if (produs.tip_prezentare.includes('posta')) { %>
                        <p>Expediere prin poștă în 3-7 zile lucrătoare.</p>
                    <% } else if (produs.tip_prezentare.includes('ridicare')) { %>
                        <p>Produsul poate fi ridicat din magazin în programul normal de lucru.</p>
                    <% } %>
                </div>

                <div class="sectiune-info">
                    <h3>Garanția produsului</h3>
                    <% if (produs.garantie) { %>
                        <p>Acest produs beneficiază de garanție limitată. Contactați-ne pentru detalii.</p>
                    <% } else { %>
                        <p>Produsul se vinde ca atare, fără garanție. Vă recomandăm să îl inspectați înainte de achiziție.</p>
                    <% } %>
                </div>
            </div>
            
            <!-- Secțiunea produse similare -->
            <% if (typeof produseSimilare !== 'undefined' && produseSimilare && produseSimilare.length > 0) { %>
            <div class="produse-similare-container">
                <h2 class="produse-similare-title">
                    <i class="fas fa-layer-group"></i>
                    Produse similare din categoria <%= produs.categorie_mare %>
                </h2>
                
                <div class="produse-similare-grid">
                    <% produseSimilare.forEach(function(produsSimil) { %>
                        <article class="produs-similar-card" onclick="navigateToProduct('<%= produsSimil.id %>')" role="button" tabindex="0">
                            <div class="produs-similar-image">
                                <img src="/src/img/produse/<%= produsSimil.imagine %>" 
                                     alt="<%= produsSimil.nume %>" 
                                     title="<%= produsSimil.nume %>">
                                <div class="produs-similar-overlay">
                                    <i class="fas fa-eye"></i>
                                    <span>Vezi detalii</span>
                                </div>
                            </div>
                            
                            <div class="produs-similar-content">
                                <h4 class="produs-similar-name">
                                    <a href="/produs/<%= produsSimil.id %>" onclick="event.stopPropagation();">
                                        <%= produsSimil.nume %>
                                    </a>
                                </h4>
                                
                                <p class="produs-similar-description">
                                    <%= produsSimil.descriere.length > 80 ? 
                                        produsSimil.descriere.substring(0, 80) + '...' : 
                                        produsSimil.descriere %>
                                </p>
                                
                                <div class="produs-similar-details">
                                    <div class="produs-similar-price">
                                        <i class="fas fa-tag"></i>
                                        <span class="price-value"><%= produsSimil.pret %> RON</span>
                                    </div>
                                    
                                    <div class="produs-similar-features">
                                        <span class="feature-item">
                                            <i class="fas fa-palette"></i>
                                            <%= produsSimil.culoare.charAt(0).toUpperCase() + produsSimil.culoare.slice(1) %>
                                        </span>
                                        
                                        <% if (produsSimil.garantie) { %>
                                        <span class="feature-item warranty">
                                            <i class="fas fa-shield-check"></i>
                                            Cu garanție
                                        </span>
                                        <% } %>
                                    </div>
                                </div>
                                
                                <div class="produs-similar-actions">
                                    <a href="/produs/<%= produsSimil.id %>" class="btn-vezi-produs" onclick="event.stopPropagation();">
                                        <i class="fas fa-arrow-right"></i>
                                        Vezi produs
                                    </a>
                                </div>
                            </div>
                        </article>
                    <% }); %>
                </div>
                
                <div class="produse-similare-footer">
                    <a href="/produse?categorie=<%= produs.categorie_mare %>" class="btn-vezi-toate">
                        <i class="fas fa-th-large"></i>
                        Vezi toate produsele din categoria <%= produs.categorie_mare %>
                    </a>
                </div>
            </div>
            <% } %>
        </section>
    </main>
    
    <%- include('../fragmente/footer') %>
    
    <!-- Script pentru meniul burger -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const menuToggle = document.querySelector('#variante-meniu .menu-toggle');
        const menuSecundar = document.querySelector('#variante-meniu .menu-secundar');
        
        if (menuToggle) {
            menuToggle.addEventListener('click', function() {
                this.classList.toggle('active');
                menuSecundar.classList.toggle('active');
            });
        }
        
        // Funcție pentru controlul sub-meniului pe mobil
        const menuItems = document.querySelectorAll('.menu-secundar a.has-submenu');
        
        menuItems.forEach(function(item) {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Toggle clasa pentru indicator
                this.classList.toggle('submenu-open');
                
                // Găsește următoarele elemente submenu
                let nextElement = this.nextElementSibling;
                const submenuItems = [];
                
                while (nextElement && nextElement.classList.contains('submenu-item')) {
                    submenuItems.push(nextElement);
                    nextElement = nextElement.nextElementSibling;
                }
                
                // Toggle vizibilitatea submenu-ului
                submenuItems.forEach(function(submenuItem, index) {
                    if (submenuItem.classList.contains('show')) {
                        submenuItem.classList.remove('show');
                    } else {
                        // Adaugă delay pentru animație
                        setTimeout(function() {
                            submenuItem.classList.add('show');
                        }, index * 100);
                    }
                });
            });
        });
    });
    </script>
    <script>
    // Function to navigate to product page
    function navigateToProduct(productId) {
        window.location.href = '/produs/' + productId;
    }
    </script>
    <script src="/src/js/comparare-produse.js"></script>
    <script src="/src/js/oferte.js"></script>
    <script>
        // Event listener pentru butonul de comparare pe pagina individuală
        document.addEventListener('DOMContentLoaded', function() {
            const compareBtn = document.querySelector('.btn-compare');
            if (compareBtn) {
                compareBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    console.log('Buton comparare apăsat pe pagina individuală pentru produsul:', this.dataset.productId);
                    
                    if (window.comparareManager) {
                        window.comparareManager.handleCompareClick(this, this.dataset.productId);
                    }
                });
            }
        });
    </script>
</body>
</html>